extends layout

block content
  h1= title
  table(class="table table-dark table-striped")
    thead 
      tr
        th Nome
        th Valor
        th Data
        th Ganho/Despesa
        th
    tbody
    for item in items
      tr
        td= item.name
        td R$#{item.value}
        td #{item.date}
        td #{item.origin}
        td
          button(class="btn btn-outline-danger" type="button" onclick='remove('+'"'+item._id+'"'+','+'"'+item.origin+'"'+')') Remover
      br
  br  
  button(onclick="location.href='./'" class="btn btn-outline-secondary btn-lg") Voltar  